<%= form_with model: current_user, url: update_member_description_path, method: :patch do |form|%>
  <div class="model-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group d-flex justify-content-center align-items-center">
          <% if current_user.image.attached? %>
            <%= image_tag(user_image(current_user), size: '50x50', class: 'rounded-circle') %>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.label :Avatar, class: 'mb-2 mt-2 p-1' %>
          <%= form.file_field :image, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= form.label :Description, class: 'mb-2 mt-2 p-1' %>
          <%= form.text_area :description, class: 'form-control', rows: 4, max: 20%>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit "Save Changes", data: { action: 'click->bootstrap#submitEnd' }, class: 'btn btn-dark w-100'%>
  </div>
<% end %>
