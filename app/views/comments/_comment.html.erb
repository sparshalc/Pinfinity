<%= turbo_frame_tag dom_id(comment) do %>
  <div class="d-flex justify-content-between ">
    <div class="comment-details d-flex">
      <div class="flex-shrink-0">  <%= image_tag(user_image(comment.user), width: "32px", class: 'rounded-circle')%></div>
      <div class="ms-3">
        <div class="fw-bold"><%= comment.user.email %> <small class="text-muted mx-1  "> <%= time_ago_in_words(comment.created_at) + ' ago'%></small></div>
        <%= comment.title %>
      </div>
    </div>
    <div class="comment-action">
      <%= button_to 'X',board_pin_comment_path(@pin.board.id, comment.pin, comment), class: 'btn btn-danger btn-sm mx-3 ',method: :delete, data: {'turbo-method': :delete} if comment.user_id == current_user.id%>
    </div>
  </div>
  <hr>
<% end %>
