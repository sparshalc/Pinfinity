  <%= form_with(model: @board) do |form| %>
  <% if @board.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>
      <ul>
        <% @board.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row m-5 d-flex justify-content-center align-items-center">
    <div class="col-lg-6">
      <%= render "partials/image", form: form, board: @board %>
    </div>
    <div class="col-lg-6">
      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <% if @board.image.attached? %>
        <div>
          <%= form.label :image, style: "display: block" %>
          <%= form.file_field :image, class: 'form-control' %>
        </div>
      <% end %>
      <div>
        <%= form.hidden_field :user_id, class: 'form-control', value: current_user.id, id: 'board_user_id' %>
      </div>
      <div class="form-check mt-2 mb-2">
        <%= form.check_box :isPrivate, class: "form-check-input", type: "checkbox" %>
        <%= form.label :isPrivate, style: "display: block" %>
      </div>
      <div>
        <%= form.submit class: 'btn btn-dark w-100', data: { action: 'click->bootstrap#submitEnd'} %>
      </div>
    </div>
  </div>
<% end %>
