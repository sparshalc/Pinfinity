<%= turbo_frame_tag board do %>
  <div class="card" style="width: 18rem; border: 0;">
    <div class="card-image">
      <%= link_to image_tag(board.image, class: "card-img-top overflow-hidden"), board, data: { turbo_frame: '_top'} if board.image.attached?  %>
    </div>
    <div class="d-flex justify-content-between mt-3 align-items-center">
      <div class="card_name">
        <p class="card-title text-center fw-bold"><%= board.name %></p>
      </div>
      <div class="board_action">
        <%= link_to edit_board_path(board), data: { controller: 'bs-modal' } do %>
          <i class="bi bi-pen"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
