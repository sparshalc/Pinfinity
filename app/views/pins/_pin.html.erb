<%= turbo_frame_tag pin do %>
  <div class="card mb-1" style="width: 18rem; border: 0;">
    <div class="box image_hover">
      <%= link_to image_tag(pin.image, class: "card-img-top overflow-hidden"), show_pin_path(pin), data: { controller: 'bs-modal' } if pin.image.attached? %>
      <i class="bi bi-eye display-1"></i>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <div class="pin_details">
        <%= pin.name.present? ? pin.name : 'Name Here' %>
      </div>
      <div class="pin_action">
        <%= button_to [pin.board, pin], class: 'btn  text-danger ',method: :delete, data: {'turbo-method': :delete, turbo_confirm: 'You sure?'} do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
